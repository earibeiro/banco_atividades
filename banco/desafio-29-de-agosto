*
CRIAR A TABELA
PRODUTO(ID,NOME,PRECO_CUSTO,PRECO_VENDA,ATIVO)
3 INSERÇÕES E VERIFIQUE */

DROP TABLE IF EXISTS produto;

CREATE TABLE produto(
id INT NOT NULL PRIMARY KEY AUTO_INCREMENT
, nome VARCHAR(255) NOT NULL UNIQUE
, preco_custo DECIMAL(8,2) NOT NULL
, preco_venda DECIMAL(8,2) NOT NULL
, ativo char(1) NOT NULL DEFAULT 'S'
); 

INSERT INTO produto (id,nome,preco_custo,preco_venda,ativo)
VALUES (NULL, 'BATATA', 0.50, 1.50, 'S');

INSERT INTO produto (id,nome,preco_custo,preco_venda,ativo)
VALUES (NULL, 'CEBOLA', 0.65, 0.97, 'S');

INSERT INTO produto (id,nome,preco_custo,preco_venda,ativo)
VALUES (NULL, 'CENOURA', 0.98, 1.48, 'S');

SELECT nome,preco_custo,preco_venda,ativo FROM produto;
